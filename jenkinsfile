pipeline {
    agent any // ใช้ตัว agent ใดก็ได้สำหรับ pipeline นี้
    environment {
        // กำหนดตัวแปรสภาพแวดล้อม
        GIT_REPO = 'https://github.com/username/repository.git'
        BRANCH = 'main'
    }
    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository...'
                git branch: "${BRANCH}", url: "${GIT_REPO}"
            }
        }
        stage('Install Dependencies') {
            steps {
                echo 'Installing dependencies...'
                sh 'npm install' // ตัวอย่างการใช้ npm หากโปรเจกต์เป็น Node.js
            }
        }
        stage('Build') {
            steps {
                echo 'Building the application...'
                sh 'npm run build' // ตัวอย่างคำสั่งการ build
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'npm test' // ตัวอย่างคำสั่งการทดสอบ
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                sh './deploy.sh' // ตัวอย่างการ deploy ด้วย script
            }
        }
    }
    post {
        always {
            echo 'Pipeline execution complete.'
        }
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for details.'
        }
    }
}